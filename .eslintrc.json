{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-classes-per-file": ["error", 3],
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "import/extensions": "off",
    "class-methods-use-this": "off",
    "no-undef": "off"
  }
}
